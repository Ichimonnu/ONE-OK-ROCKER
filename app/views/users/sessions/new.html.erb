<header>
<div class="header-list">
    <ul>
      <li><%= link_to t("models.post.home"), posts_link_path %></li>
      <li><%= link_to t("models.post.posts list"), posts_path %></li>
    </ul>
</div>
</header>
<div class="header-logo-menu">
<div id="nav-drawer">
        <input id="nav-input" type="checkbox" class="nav-unshown">
        <label id="nav-open" for="nav-input"><span></span></label>
        <label class="nav-unshown" id="nav-close" for="nav-input"></label>
        <div id="nav-content">
        <ul>
          <li class="sarad1"><%= link_to t("models.post.home"), posts_link_path %></li>
          <li class="sarad"><%= link_to t("models.post.posts list"), posts_path %></li>
        </ul>
    </div>
</div>
</div>
<div class="second-block">
<h3>Log in</h3>
<br>
  <div class="pw-form">
      <div class="pw-form-container">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <p>
            <%= f.label :email, {class:'syun'} %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </p>
            
          <p><%= f.label :password, {class:'syun'} %></p>
          <p>
            <%= f.password_field :password, autocomplete: "current-password" %>
            <span class = "field-icon">
              <i toggle ="#password-field" class="fas fa-eye toggle-password"></i>
            </span>
          </p>
          <p>
            
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, {class:'syun'} %>
              </div>
            <% end %>
          </p>
          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>

            <%#- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%#= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <%# end %>
      </div>
  </div>
</div>

<script>

// パスワードの表示・非表示切替
$(".toggle-password").click(function () {
    // iconの切り替え
    $(this).toggleClass("fa-eye fa-eye-slash");

    // 入力フォームの取得
    let input = $(this).parent().prev("input");
    // type切替
    if (input.attr("type") === "password") {
        input.attr("type", "text");
    } else {
        input.attr("type", "password");
    }
});

</script>